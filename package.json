{
  "name": "server",
  "version": "1.0.0",
  "description": "node-express server",
  "main": "server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
    "start": "ts-node src/server.ts",
    "build": "tsc",
    "formet:check": "prettier . --check",
    "formet:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "Faisal Khan <faisal.mernstack@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.14.11",
    "@types/pg": "^8.15.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run formet:fix"
    ]
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "http-errors": "^2.0.0",
    "pg": "^8.16.0",
    "qs": "^6.14.0",
